<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <cn.carbs.android.avatarimageview.library.AvatarImageView
                android:id="@+id/IMGavatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                app:aiv_CornerRadius="24dp"
                app:aiv_ShowBoarder="false"
                app:aiv_TextSizeRatio="0.5" />

            <TextView
                android:id="@+id/TVtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/IMGavatar"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@id/IMGavatar"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="关于钩织的一点心得体会"
                android:textSize="14sp"
                android:textStyle="bold" />




            <TextView
                android:id="@+id/TVgroup"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/IMGavatar"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/IMGavatar"
                android:text="婴幼儿"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/TVstyle"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/IMGavatar"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/TVgroup"
                android:text="叶子花"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/TVtool"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/IMGavatar"
                android:layout_toEndOf="@id/TVstyle"
                android:text="钩织结合"
                android:textSize="10sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/IMGw2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hint_for_img" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/IMGw22"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hint_for_img"/>

                <ImageView
                    android:id="@+id/IMGw23"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hint_for_img"/>

            </LinearLayout>


        </LinearLayout>
        <TextView
            android:id="@+id/TVcomment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:paddingTop="4dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="TextView//nfg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp">

            <ToggleButton
                android:id="@+id/BTfavorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:background="@drawable/favorite_selector"
                android:textOff="@null"
                android:textOn="@null" />


            <Button
                android:id="@+id/BTshare"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ic_share_black_24dp"/>


            <Button
                android:id="@+id/BTcomment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@id/BTshare"
                android:background="@drawable/ic_comment_black_24dp" />


        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

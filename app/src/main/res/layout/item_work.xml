<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <cn.carbs.android.avatarimageview.library.AvatarImageView
                android:id="@+id/IMGavatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:aiv_CornerRadius="24dp"
                app:aiv_ShowBoarder="false"
                app:aiv_TextSizeRatio="0.5" />

            <TextView
                android:id="@+id/TVtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/IMGavatar"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@id/IMGavatar"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="关于钩织的一点心得体会"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/TVtool"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/IMGavatar"
                android:layout_toEndOf="@id/IMGavatar"
                android:text="钩织结合"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/TVgroup"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/IMGavatar"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/TVtool"
                android:text="婴幼儿"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/TVstyle"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/IMGavatar"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/TVgroup"
                android:text="叶子花"
                android:textSize="10sp" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/IMGwork"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/TVcomment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:paddingTop="4dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="TextView//nfg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ToggleButton
                android:id="@+id/BTfavorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:background="@drawable/favorite_selector"
                android:textOff="@null"
                android:textOn="@null" />


            <Button
                android:id="@+id/BTshare"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ic_share_black_24dp"/>


            <Button
                android:id="@+id/BTcomment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@id/BTshare"
                android:background="@drawable/ic_comment_black_24dp" />


        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

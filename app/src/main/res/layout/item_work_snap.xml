<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <cn.carbs.android.avatarimageview.library.AvatarImageView
                android:id="@+id/IMGavatars"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                app:aiv_CornerRadius="24dp"
                app:aiv_ShowBoarder="false"
                app:aiv_TextSizeRatio="0.5" />

            <TextView
                android:id="@+id/TVtitles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/IMGavatars"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@id/IMGavatars"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="关于钩织的一点心得体会"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/IMGavatars"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:text="随拍" />



        </RelativeLayout>



        <ImageView
            android:id="@+id/IMGw2s"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hint_for_img" />



        <TextView
            android:id="@+id/TVcomments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:paddingTop="4dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="TextView//nfg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp">

            <ToggleButton
                android:id="@+id/BTfavorites"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:background="@drawable/favorite_selector"
                android:textOff="@null"
                android:textOn="@null" />


            <Button
                android:id="@+id/BTshares"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ic_share_black_24dp"/>


            <Button
                android:id="@+id/BTcomments"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@id/BTshares"
                android:background="@drawable/ic_comment_black_24dp" />


        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

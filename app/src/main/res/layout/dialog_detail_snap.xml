<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cn.carbs.android.avatarimageview.library.AvatarImageView
            android:id="@+id/IMGavatar0s"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:aiv_CornerRadius="24dp"
            app:aiv_ShowBoarder="false"
            app:aiv_TextSizeRatio="0.5" />

        <TextView
            android:id="@+id/TVtitle0s"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/IMGavatar0s"
            android:layout_toEndOf="@id/IMGavatar0s"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="2"
            android:text="关于钩织的一点心得体会"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/date0s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/IMGavatar0s"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:paddingEnd="4dp"
            android:text="2019/4/29 17:18"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/name0s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王境泽"
            android:layout_alignTop="@id/TVtitle0s"
            android:layout_alignEnd="@id/date0s"/>



    </RelativeLayout>

    <ImageView
        android:id="@+id/IMG02s"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/hint_for_img" />

    <TextView
        android:id="@+id/TVcontent0s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="someone call the doctor "
        android:textStyle="bold" />

</LinearLayout>

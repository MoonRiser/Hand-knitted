<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <cn.carbs.android.avatarimageview.library.AvatarImageView
                android:id="@+id/IMGavatarms"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:aiv_CornerRadius="24dp"
                app:aiv_ShowBoarder="false"
                app:aiv_TextSizeRatio="0.5" />

            <TextView
                android:id="@+id/datems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019.4.26"
                android:layout_alignTop="@id/IMGavatarms"
                android:layout_marginEnd="8dp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/timems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/IMGavatarms"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:text="21:51"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/TVtitlems"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_alignTop="@id/IMGavatarms"
                android:layout_toEndOf="@id/IMGavatarms"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="关于钩织的一点心得体会"
                android:textSize="20sp"
                android:textStyle="bold" />





        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/IMGms2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hint_for_img" />

            <TextView
                android:id="@+id/TVcontentms"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:padding="4dp"
                android:text="Someonecall 他和do"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
